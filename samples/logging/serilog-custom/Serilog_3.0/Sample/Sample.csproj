  </PropertyGroup>

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <LangVersion>7.1</LangVersion>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NServiceBus" Version="6.*" />
    <PackageReference Include="NServiceBus.Serilog" Version="3.*" />
    <PackageReference Include="Serilog" Version="2.*" />
    <PackageReference Include="Serilog.Sinks.Console" Version="3.*" />
    <PackageReference Include="Serilog.Sinks.File" Version="3.*" />
  </ItemGroup>
</Project>
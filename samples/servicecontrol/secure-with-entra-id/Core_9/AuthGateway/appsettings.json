{
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "{your-tenant-id}",
    "ClientId": "{your-client-id}",
    "ClientSecret": "{your-client-secret}",
    "CallbackPath": "/signin-oidc"
  },
  "ReverseProxy": {
    "Routes": {
      "servicepulse-route": {
        "ClusterId": "servicepulse-cluster",
        "AuthorizationPolicy": "default",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "servicepulse-cluster": {
        "Destinations": {
          "servicepulse": {
            "Address": "http://servicepulse:9090"
          }
        }
      }
    }
  }
}
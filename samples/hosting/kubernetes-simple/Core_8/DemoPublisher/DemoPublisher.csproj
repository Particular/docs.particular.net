        <ImplicitUsings>enable</ImplicitUsings>
        <LangVersion>12.0</LangVersion>
    </PropertyGroup>

    <PropertyGroup>
        <ContainerImageTag>latest</ContainerImageTag>
        <ContainerRepository>publisher</ContainerRepository>

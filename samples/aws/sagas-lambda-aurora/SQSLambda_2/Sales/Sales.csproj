    <PackageReference Include="Amazon.Lambda.SQSEvents" Version="2.*" />
    <PackageReference Include="MySqlConnector" Version="2.*" />
    <PackageReference Include="NServiceBus.AwsLambda.SQS" Version="2.0.0-alpha.1" />

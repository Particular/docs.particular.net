<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!--startcode sqlserver-multidb-connectionstrings-->
  <connectionStrings>
    <add name="NServiceBus/Transport"
         connectionString="Server=DbServerA;Database=MyDefaultDB;"/>
    <add name="NServiceBus/Transport/Billing"
         connectionString="Server=DbServerB;Database=Billing;"/>
  </connectionStrings>
  <!--endcode-->
  <!--startcode sqlserver-multidb-messagemapping-->
  <UnicastBusConfig>
    <MessageEndpointMappings>
      <add Assembly="Billing.Contract"
           Endpoint="billing"/>
      <add Assembly="Sales.Contract"
           Endpoint="sales"/>
    </MessageEndpointMappings>
  </UnicastBusConfig>
  <!--endcode-->
  <!--startcode sc-enabledtc-config-->
  <appSettings>
    <add key="ServiceControl/EnableDtc" value="True" />
  </appSettings>
  <!--endcode-->
  <!--startcode sc-multi-instance-connection-strings-->
  <connectionStrings>
    <add name="NServiceBus/Transport"
         connectionString="Server=DbServerA;Database=ServiceControlDB;"/>
    <add name="NServiceBus/Transport/Billing"
         connectionString="Server=DbServerB;Database=BillingDB;"/>
    <add name="NServiceBus/Transport/Sales"
         connectionString="Server=DbServerC;Database=SalesDB;"/>
  </connectionStrings>
  <!--endcode-->
</configuration>